/dts-v1/;

#include "enclustra_mercury_mp1_common.dtsi"

/ {
	model = "enclustra,me-mp1-250-si-d3en";

	aliases {
		ethernet0 = &mac0;
		ethernet1 = &mac1;
	};

	/* 2 Gbyte DDR4 memory */
	mss_memory: memory@80000000 {
		device_type = "memory";
		reg = <0x0 0x80000000 0x0 0x40000000>, <0x10 0x0 0x0 0x40000000>;
		status = "okay";
	};
};

&mac0 {
	status = "okay";
	/delete-property/ mac-address;
	/delete-property/ local-mac-address;
	phy-mode = "sgmii";
	phy-handle = <&phy0>;
};

&mac1 {
	phy0: ethernet-phy@0 {
		reg = <0>;
	};
};
